<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#2b2b2b"
    android:textColor="#ffffff"
    tools:context="com.example.yuesh.sshmaster.Add">




    <EditText
        android:layout_width="wrap_content"
        android:textColor="#ffffff"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginEnd="23dp"
        android:id="@+id/editText_hostname"
        android:singleLine="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="主机域名"
        android:layout_width="wrap_content"
        android:textColor="#ffffff"
        android:layout_height="wrap_content"
        android:id="@+id/textView_hostname"
        android:layout_alignBaseline="@+id/editText_hostname"
        android:layout_alignBottom="@+id/editText_hostname"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="密码"
        android:layout_width="wrap_content"
        android:textColor="#ffffff"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:id="@+id/textView_userpasswd"
        android:layout_below="@+id/editText_username"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:textColor="#ffffff"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="22dp"
        android:id="@+id/editText_port"
        android:layout_below="@+id/editText_hostname"
        android:layout_alignStart="@+id/editText_hostname" />

    <EditText
        android:layout_width="wrap_content"
        android:textColor="#ffffff"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText_username"
        android:layout_alignBaseline="@+id/textView_username"
        android:layout_alignBottom="@+id/textView_username"
        android:layout_alignStart="@+id/editText_port" />

    <EditText
        android:layout_width="wrap_content"
        android:textColor="#ffffff"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText_userpasswd"
        android:layout_alignBaseline="@+id/textView_userpasswd"
        android:layout_alignBottom="@+id/textView_userpasswd"
        android:layout_alignStart="@+id/editText_username" />

    <TextView
        android:text="端口"
        android:layout_width="wrap_content"
        android:textColor="#ffffff"
        android:layout_height="wrap_content"
        android:id="@+id/textView_port"
        android:layout_alignBaseline="@+id/editText_port"
        android:layout_alignBottom="@+id/editText_port"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="用户名"
        android:layout_width="wrap_content"
        android:textColor="#ffffff"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:id="@+id/textView_username"
        android:layout_below="@+id/editText_port"
        android:layout_alignParentStart="true" />
</RelativeLayout>
